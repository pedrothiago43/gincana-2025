            <div class="tab" data-tab="ranking">Classificação</div>
        </div>
        
        <div class="tab-content active" id="dashboard">
            <h2>Visão Geral</h2>
            <div class="dashboard">
                <div class="card">
                    <div class="card-header">Pontuação por Equipes</div>
                    <ul class="team-list" id="team-scores">
                        <!-- Será preenchido via JavaScript -->
                    </ul>
                </div>
                
                <div class="card">
                    <div class="card-header">Adicionar Pontuação Rápida</div>
                    <div class="form-group">
                        <label for="quick-team">Equipe:</label>
                        <select id="quick-team">
                            <option value="">Selecione uma equipe</option>
                            <option value="vermelha">Vermelha</option>
